/* 5、flex 垂直布局 */

.mp-flex-column {
  display: flex;
  flex-direction: column; /* 垂直方向 */
  box-sizing: border-box;
}

.mp-flex-column-center {
  align-items: center; /* 水平居中 */
  justify-content: center; /* 垂直居中对齐 */
}

.mp-flex-column-space {
  align-items: center; /* 水平居中 */
  justify-content: space-between; /* 垂直分散对齐 */
}

/* 6、flex 水平布局 */

.mp-flex-row {
  display: flex;
  box-sizing: border-box;
}

.mp-flex-row-center {
  align-items: center; /* 垂直居中 */
  justify-content: center; /* 水平居中 */
}

.mp-flex-row-space {
  align-items: center; /* 垂直居中 */
  justify-content: space-between; /* 水平分散对齐 */
}

/* 7、固定 */

.mp-fixed-bottom {
  display: block;
  width: 100%;
  position: fixed;
  bottom: 0; /* 底部 */
}

/* 8、边线 */

.mp-border-top {
  border-top: 1rpx solid #d1d1d1;
}

.mp-border-right {
  border-right: 1rpx solid #d1d1d1;
}

.mp-border-bottom {
  border-bottom: 1rpx solid #d1d1d1;
}

.mp-border-left {
  border-left: 1rpx solid #d1d1d1;
}

/* 9、网格  */

.mp-grids {
  background-color: #fff;
  overflow: hidden;
}

.mp-grid {
  position: relative;
  float: left;
  box-sizing: border-box;
}

.mp-grid-4 {
  width: 25%;
}

.mp-grid-5 {
  width: 20%;
}

.mp-grid-6 {
  width: 125rpx;
}

.mp-grid-hover {
  background-color: #ececec;
}

.mp-grid-icon {
  display: block;
  text-align: center;
}

.mp-grid-icon-dot {
  position: absolute;
  top: 12rpx;
  right: 60rpx;
  padding: 6rpx;
}

.mp-grid-label {
  display: block;
  text-align: center;
  color: #666;
}

