/* 1、省略标记文本（...）  */

.mp-text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.mp-text-ellipsis .mp-text-ellipsis-1 {
  -webkit-line-clamp: 1; /* 单行  */
}

.mp-text-ellipsis .mp-text-ellipsis-2 {
  -webkit-line-clamp: 2; /* 2行  */
}

.mp-text-ellipsis .mp-text-ellipsis-3 {
  -webkit-line-clamp: 3; /* 3行  */
}

