@import "../../wxParse/wxParse.wxss";

page {
  font-size: 24rpx;
  color: #333;
}

/* top-nav */

.exam-top-nav-area {
  display: flex;
  align-items: center; /* 垂直居中 */
  justify-content: space-between; /* 水平分散对齐 */
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  width: 100%;
  height: 90rpx;
  position: fixed;
  z-index: 99999;
  border-bottom: 1rpx solid #d1d1d1;
  background-color: #fff;
}

.exam-top-nav-label {
  border-radius: 4rpx;
  padding: 4rpx 12rpx;
}

/* 试题区 */

.questions-area {
  padding-top: 90rpx;
}

.wxParse {
  font-size: 24rpx;
  line-height: 1.8;
  color: #333;
  padding: 20rpx;
}

.wxParse-inline {
  word-break: break-word !important;
}

/* scroll*/

.ext-scroll {
  width: 100%;
  overflow-y: scroll;
  overflow-x: hidden;
}

.exam-partB {
  background-color: #f1f1f1;
}

.exam-option-multi-area {
  display: flex;
  padding-top: 20rpx;
}

.exam-option-multi-num {
  width: 50rpx;
  text-align: right;
}

.exam-option-multi-group {
  width: 700rpx;
}

.exam-options-group {
  display: flex;
  flex-wrap: wrap;
  font-size: 28rpx;
}

.exam-options-lable-4 {
  width: 25%;
  text-align: center;
}

.exam-options-lable-5 {
  width: 20%;
  text-align: center;
}

.exam-options-lable-7 {
  width: 14%;
  text-align: center;
}
